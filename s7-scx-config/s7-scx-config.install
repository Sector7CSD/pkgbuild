post_install() {
    echo "==> scx_loader.toml installed."
    echo "==> Enable and start the service if desired:"
    echo "    systemctl enable --now scx_loader.service"
}

post_upgrade() {
    systemctl daemon-reload
    echo "==> Reloaded systemd units."
}

post_remove() {
    systemctl daemon-reload
    echo "==> scx_loader.service deactivated/removed if it existed."
}

