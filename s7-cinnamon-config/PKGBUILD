            '701c5c991182140bd64cbf8b1512d1c2dd8e8b48de97a52de90582c82af86e4c')

package() {
    install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
    install -Dm644 panel-launchers.json "${pkgdir}/usr/share/sector7/cinnamon/panel-launchers@cinnamon.org/3.json"
    install -Dm644 window-list.json "${pkgdir}/usr/share/sector7/cinnamon/window-list@cinnamon.org/4.json"
    install -Dm644 workspace-switcher.json "${pkgdir}/usr/share/sector7/cinnamon/workspace-switcher@cinnamon.org/5.json"
